@model Core.Models.MultipleFileUploadModel

<h2>Upload Multiple Files</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (ViewBag.UploadedFiles != null)
{
    <h3>Uploaded Files:</h3>
    <ul>
        @foreach (var file in ViewBag.UploadedFiles)
        {
            <li>@file</li>
        }
    </ul>
}

<form asp-action="Upload" asp-controller="FileUpload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="files"></label>
        <input asp-for="files" name="files" type="file" multiple class="form-control" />
        <span asp-validation-for="files" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>